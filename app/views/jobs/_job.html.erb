<div class="py-5">
  <div class="mb-2">
    <%= link_to job,
      class: 'text-xl lg:text-2xl mr-1 font-medium text-gray-900 hover:text-gray-700' do
    %>
      <%= job.title %>
    <% end %>
    <span class="text-gray-600 lg:text-lg mr-1">
      <%= t 'views.at' %>
    </span>
    <span class="text-lg lg:text-xl text-gray-800">
      <%= job.company.name %>
    </span>
  </div>
  <p class="mb-1 text-gray-700">
    <%= salary_range(job) %>
    <span class="text-gray-500 mx-1">|</span>
    <%= Job.human_attribute_name("employment_type.#{job.employment_type}") %>
  </p>
  <p class="mb-2 text-sm text-gray-800">
    <%= t 'views.posted_at', count: posted_at_count(job) %>
  </p>
  <div class="flex flex-wrap">
    <% if false %>
      <span class="tag mr-2">
        <%= image_tag 'pin.svg', class: 'injectable h-3 text-gray-500 fill-current mr-1' %>
        <%= job.location %>
      </span>
    <% end %>

    <%= link_to jobs_path(category: job.category), class: 'tag mr-2' do %>
      <%= Job.human_attribute_name("category.#{job.category}") %>
    <% end %>

    <% if job.remote? %>
      <span class="tag mr-2">
        <%= image_tag 'globe.svg', class: 'injectable h-3 text-gray-500 fill-current mr-1' %>
        <%= Job.human_attribute_name('remote') %>
      </span>
    <% end %>

    <% if job.visa_sponsorship? %>
      <span class="tag mr-2">
        <%= image_tag 'airplane.svg', class: 'injectable h-3 text-gray-500 fill-current mr-1' %>
        <%= Job.human_attribute_name('visa_sponsorship') %>
      </span>
    <% end %>
  </div>
</div>

<hr class="border-b-2 border-gray-200 mb-0">
