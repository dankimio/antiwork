<div class="px-4 lg:px-0 max-w-lg mx-auto mb-6">
  <% if false %>
    <input type="text" class="field mb-3" placeholder="Please enter queryâ€¦">
  <% end %>

  <div class="flex mb-1">
    <div class="dropdown-link mr-6 text-gray-600">
      Category

      <%= image_tag 'arrow-dropdown.svg',
                    class: 'injectable dropdown-arrow inline-block h-6 w-6 ml-1 text-gray-600 fill-current' %>

      <div class=" dropdown-content absolute hidden w-64 shadow-lg text-gray-700">
        <ul class="dropdown-list">
          <div class="dropdown-list-item">
            <span class="flex-1">Software development</span>
            <span></span>
          </div>
          <div class="dropdown-list-item">
            <span class="flex-1">Design</span>
            <span></span>
          </div>
          <div class="dropdown-list-item">
            <span class="flex-1">Customer support</span>
            <span class="ml-2">
              <%= image_tag 'checkmark.svg', class: 'injectable w-4 text-gray-600 fill-current' %>
            </span>
          </div>
          <div class="dropdown-list-item">
            <span class="flex-1">Management</span>
            <span></span>
          </div>
          <div class="dropdown-list-item">
            <span class="flex-1">Analytics</span>
            <span></span>
          </div>
        </ul>
      </div>
    </div>
  </div>

  <% @jobs.each_with_index do |job, index| %>
  <div class="py-5">
    <div class="mb-2">
      <%= link_to show_path,
                  class: 'underlined underlined-black text-xl lg:text-2xl font-semibold mr-1' do %>
      <%= job[:title] %>
      <% end %>
      <span class="text-gray-600 lg:text-lg mr-1">at</span>
      <span class="text-lg lg:text-xl">
        <%= job[:company] %>
      </span>
    </div>
    <p class="mb-3 text-gray-700">
      <%= job[:salary] %>
      <span class="text-gray-500">|</span>
      <%= job[:category] %>
    </p>
    <div class="flex">
      <% if false %>
        <span class="tag mr-2">
          <%= image_tag 'pin.svg', class: 'injectable h-3 text-gray-500 fill-current mr-1' %>
          <%= job[:location] %>
        </span>
      <% end %>

      <span class="tag mr-2">
        <%= 'UI Design' %>
      </span>

      <% if index % 3 == 0 %>
      <span class="tag mr-2">
        <%= image_tag 'globe.svg', class: 'injectable h-3 text-gray-500 fill-current mr-1' %>
        Remote
      </span>
      <% end %>

      <% if index % 2 == 0 %>
      <span class="tag mr-2">
        <%= image_tag 'airplane.svg', class: 'injectable h-3 text-gray-500 fill-current mr-1' %>
        Visa
      </span>
      <% end %>
    </div>
  </div>
  <hr class="border-b-2 border-gray-200 mb-0">
  <% end %>
</div>

<%= render 'shared/footer' %>
