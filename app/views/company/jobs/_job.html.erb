<div class="py-3 flex justify-between">
  <div>
    <div class="mb-1">
      <%= link_to job,
        class: 'text-lg lg:text-xl mr-1 font-medium text-gray-900 hover:text-gray-700' do
      %>
        <%= job.title %>
      <% end %>
    </div>
    <p class="text-sm text-gray-800">
      <%= t 'views.posted_at', count: posted_at_count(job) %>
    </p>
  </div>
  <div>
    <%= link_to edit_job_path(job),
      class: 'flex items-center text-gray-600 fill-current hover:text-gray-900' do
    %>
      <%= image_tag 'pencil.svg',
        class: 'injectable w-4 h-4 mr-2'
      %>
      <%= t '.edit_link' %>
    <% end %>
  </div>
</div>

<hr class="border-b-2 border-gray-200 mb-0">
